                this.Commit();
                
            }
            catch (Exception ex)
            {
<#+ if (Trazable){ #>                // Escribir en el Log.
                logger.Error(ex.Message, ex);
<#+ }#>                throw ex;
            }

            // Devolvemos el resultado.
            return true;
        }
        #endregion
<#+
        return this.GenerationEnvironment.ToString();
